{
  "name": "@map-colonies/openapi-express-viewer",
  "version": "4.1.0",
  "description": "A package for openapi ui middleware for express",
  "main": "./dist/index.js",
  "type": "commonjs",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prebuild": "pnpm run clean",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "prepack": "turbo run build",
    "check-dist": "publint && attw --pack .",
    "knip": "knip --directory ../.. --workspace packages/openapi-express-viewer",
    "api": "api-extractor run --local --verbose",
    "api:check": "api-extractor run --verbose"
  },
  "repository": "github:MapColonies/infra-packages",
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=24"
  },
  "homepage": "https://github.com/MapColonies/openapi-express-viewer#readme",
  "devDependencies": {
    "@map-colonies/eslint-config": "workspace:^",
    "@map-colonies/tsconfig": "workspace:^",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/supertest": "catalog:",
    "@types/node": "catalog:",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "catalog:",
    "express": "^4.21.0",
    "rimraf": "catalog:",
    "supertest": "catalog:",
    "typescript": "catalog:",
    "vitest-config": "workspace:^",
    "vitest": "catalog:",
    "@microsoft/api-extractor": "catalog:"
  },
  "dependencies": {
    "http-status-codes": "^2.3.0",
    "js-yaml": "^4.1.0",
    "swagger-ui-express": "^5.0.1"
  }
}
