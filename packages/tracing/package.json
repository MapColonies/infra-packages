{
  "name": "@map-colonies/tracing",
  "version": "0.0.1",
  "description": "A package that provides tracing capabilities using OpenTelemetry SDK",
  "main": "./dist/index.js",
  "type": "commonjs",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prebuild": "pnpm run clean",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "prepack": "turbo run build",
    "check-dist": "publint && attw --pack .",
    "knip": "knip --directory ../.. --workspace packages/tracing",
    "api": "api-extractor run --local --verbose",
    "api:check": "api-extractor run --verbose",
    "proto:gen": "pnpm exec protoc --ts_out ./tests/generated --proto_path tests/protos tests/protos/*"
  },
  "repository": "github:MapColonies/infra-packages",
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=24"
  },
  "devDependencies": {
    "@map-colonies/eslint-config": "workspace:^",
    "@map-colonies/tsconfig": "workspace:^",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vitest-config": "workspace:^",
    "vitest": "catalog:",
    "@protobuf-ts/plugin": "^2.11.1",
    "protoc": "^33.2.0",
    "@protobuf-ts/runtime": "^2.11.1",
    "nock": "^14.0.10",
    "@microsoft/api-extractor": "catalog:",
    "@opentelemetry/api": "catalog:"
  },
  "dependencies": {
    "@opentelemetry/sdk-trace-node": "2.3.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.208.0",
    "@opentelemetry/sdk-trace-base": "2.3.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.3",
    "@opentelemetry/instrumentation": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "ajv": "^8.17.1",
    "@apideck/better-ajv-errors": "^0.3.6",
    "ajv-formats": "^3.0.1",
    "@map-colonies/read-pkg": "workspace:^"
  },
  "peerDependencies": {
    "@opentelemetry/api": "^1.9.0"
  }
}
