{
  "name": "@map-colonies/error-express-handler",
  "version": "3.0.0",
  "description": "Express error handler for the MapColonies project",
  "main": "./dist/index.js",
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "vitest run",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "prepack": "turbo run build",
    "check-dist": "publint && attw --pack .",
    "knip": "knip --directory ../.. --workspace packages/error-express-handler"
  },
  "repository": "github:MapColonies/infra-packages",
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@map-colonies/eslint-config": "workspace:^",
    "@map-colonies/tsconfig": "workspace:^",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.5",
    "@types/supertest": "^6.0.2",
    "express": "^4.21.0",
    "supertest": "^7.0.0",
    "typescript": "catalog:",
    "vitest-config": "workspace:^",
    "vitest": "catalog:",
    "eslint": "catalog:"
  },
  "dependencies": {
    "http-status-codes": "^2.3.0"
  }
}
