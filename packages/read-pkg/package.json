{
  "name": "@map-colonies/read-pkg",
  "version": "3.0.0",
  "description": "This is a helper for reading and parsing package json files",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "type": "commonjs",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "vitest run",
    "prebuild": "pnpm run clean",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "prepack": "turbo run build",
    "check-dist": "publint && attw --pack .",
    "knip": "knip --directory ../.. --workspace packages/read-pkg",
    "api": "api-extractor run --local --verbose",
    "api:check": "api-extractor run --verbose"
  },
  "repository": "github:MapColonies/infra-packages",
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=24"
  },
  "homepage": "https://github.com/MapColonies/read-pkg#readme",
  "devDependencies": {
    "@map-colonies/eslint-config": "workspace:^",
    "@map-colonies/tsconfig": "workspace:^",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vitest-config": "workspace:^",
    "vitest": "catalog:",
    "@microsoft/api-extractor": "catalog:"
  },
  "dependencies": {
    "type-fest": "^5.0.0"
  }
}
