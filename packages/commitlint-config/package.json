{
  "name": "@map-colonies/commitlint-config",
  "version": "2.0.0",
  "description": "Commitlint configuration for MapColonies projects",
  "repository": "github:MapColonies/infra-packages",
  "publishConfig": {
    "access": "public"
  },
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "vitest run",
    "build": "tsc --project tsconfig.build.json",
    "lint": "eslint .",
    "prepack": "turbo run build",
    "prebuild": "pnpm run clean",
    "clean": "rimraf dist",
    "check-dist": "publint && attw --profile=node16 --pack .",
    "knip": "knip --directory ../.. --workspace packages/commitlint-config"
  },
  "files": [
    "dist/**"
  ],
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^20.2.0"
  },
  "devDependencies": {
    "vitest": "catalog:",
    "vitest-config": "workspace:^",
    "@commitlint/types": "20.4.0",
    "zx": "8.8.5",
    "typescript": "catalog:",
    "@map-colonies/tsconfig": "workspace:^",
    "@map-colonies/eslint-config": "workspace:^",
    "eslint": "catalog:"
  }
}
